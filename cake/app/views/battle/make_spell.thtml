<script type="text/JavaScript">

function reset_spell(){
  var old_first_spell = 0;
  var old_second_spell = 0;
  var old_third_spell = 0;
  document.getElementById("first_spell").value=99;
  document.getElementById("second_spell").value=99;
  document.getElementById("third_spell").value=99;
  for(i=0;i<=10;i++){
    document.getElementById("first_spell_"+i).disabled=false;
    document.getElementById("second_spell_"+i).disabled=false;
    document.getElementById("third_spell_"+i).disabled=false;
  }
  document.getElementById("use_key").disabled=true;
}

function key_botan_enable(){
  var all_number = parseInt(document.getElementById("first_spell").value) + parseInt(document.getElementById("second_spell").value) +  parseInt(document.getElementById("third_spell").value);
  if((all_number>2)&&(all_number<60)){
    document.getElementById("use_key").disabled=false;
  }else{
    document.getElementById("use_key").disabled=true;
  }
}



$(function(){
  var old_first_spell = 0;
  var old_second_spell = 0;
  var old_third_spell = 0;
  //document.getElementById("second_spell_1").disabled=true;
  <?php echo $jscode;?>

  //セレクトボックスを監視
  $("#first_spell").bind("change",
    function(){
      //前のスペルは有効にする
      document.getElementById("second_spell_"+old_first_spell).disabled=false;
      document.getElementById("third_spell_"+old_first_spell).disabled=false;
      var target_id = $(this).val();
      //ここで選択した番号は、他の入力では無効化する
      document.getElementById("second_spell_"+target_id).disabled=true;
      document.getElementById("third_spell_"+target_id).disabled=true;
      //変数に保存する
      old_first_spell = target_id;
      //キーボタンの状態を変化
      key_botan_enable();
  });
  $("#second_spell").bind("change",
    function(){
      //前のスペルは有効にする
      document.getElementById("first_spell_"+old_second_spell).disabled=false;
      document.getElementById("third_spell_"+old_second_spell).disabled=false;
      var target_id = $(this).val();
      document.getElementById("first_spell_"+target_id).disabled=true;
      document.getElementById("third_spell_"+target_id).disabled=true;
      //変数に保存する
      old_second_spell = target_id;
      //キーボタンの状態を変化
      key_botan_enable();
  });
  $("#third_spell").bind("change",
    function(){
      //前のスペルは有効にする
      document.getElementById("first_spell_"+old_third_spell).disabled=false;
      document.getElementById("second_spell_"+old_third_spell).disabled=false;
      var target_id = $(this).val();
      document.getElementById("first_spell_"+target_id).disabled=true;
      document.getElementById("second_spell_"+target_id).disabled=true;
      //変数に保存する
      old_third_spell = target_id;
      //キーボタンの状態を変化
      key_botan_enable();
  });
});


</script>
